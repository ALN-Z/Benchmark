{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "commonjs",                          
    "lib": ["es2019"],                                   
    
    "outDir": "./dist",                              
    "importHelpers": true,                       
    
    "types": [
      "node",
   ],
    "esModuleInterop": true,                        
    
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
    
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]

}
